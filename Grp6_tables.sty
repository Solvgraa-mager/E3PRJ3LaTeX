\newcounter{acceptkrav}
\setcounter{acceptkrav}{1}
%-------------------------------------------------------------------------------
%                Required Packages
%-------------------------------------------------------------------------------
%-------------------------------------------------------------------------------
%                \addtitle command: add the title of the use case
%-------------------------------------------------------------------------------
\newcommand\acceptkrav[1]{
    \theacceptkrav & #1 \refstepcounter{acceptkrav}\\\cmidrule(lr){2-2}
}
\newcommand\acceptkravtabularhead[2]{%
    \begin{table}[!h]
        \centering
        \caption{Accepttest for: #1}\label{tab:#2}
        \begin{tabular}{c p{7cm}}\toprule}

            \newenvironment{acceptkravspec}[2]{\acceptkravtabularhead{#1}{#2}}%
            {%
            \bottomrule\end{tabular}
    \end{table}
    \setcounter{acceptkrav}{1}}



