\newcommand\signalbeskrivelse[3]{%
    #1 & #2 & #3 \\ }
\newcommand\signalbeskrivelsetabularhead[2]{%
	\renewcommand{\arraystretch}{1.4}
    \begin{table*}[!ht]
    \small
        \centering
        \caption{Signalbeskrivelse for #1}
        \label{tab:interface_table_#2}
        \begin{tabular}{p{4cm}p{3cm}p{8cm}}\toprule
            Navn & Type & Beskrivelse \\
            \midrule}
            \newenvironment{SignalDescription}[2]{\signalbeskrivelsetabularhead{#1}{#2}}%
            {%
            \bottomrule\end{tabular}
    \end{table*}
\renewcommand{\arraystretch}{1.3}
}


\newcounter{blokCounter}
\setcounter{blokCounter}{1}

\newtoggle{firstrowport}

\newcommand\Blokbeskrivelse[2]{%
    \\\midrule
    \textbf{#1} & \multirow{\theblokCounter}{=}{#2}%
    \setcounter{blokCounter}{1}%
    \toggletrue{firstrowport}
}


\newcommand\Portbeskrivelse[4]{%
\refstepcounter{blokCounter}%
\iftoggle{firstrowport}{%
%\\\cmidrule(lr){3-5}
    & #1 & #2 & #3 & %
    \setlist[itemize]{nosep}
    \begin{itemize}[leftmargin=*]
 #4
    \end{itemize}
    \togglefalse{firstrowport}
}{%
    \\\cmidrule(lr){3-6}& & #1 & #2 & #3 & %
    \begin{itemize}[leftmargin=*]
 #4
    \end{itemize}
}}

\newcommand{\BlokSpacer}[1]{\\[#1] & & & & &}


\newcommand\blokbeskrivelsetabularhead[2]{
    \begin{table*}[!ht]
    \sisetup{
    separate-uncertainty = true,
scientific-notation = engineering,
exponent-to-prefix = true, 
round-mode=figures,
round-precision=3,
}
    \footnotesize
        \centering
        \caption{Blokbeskrivelse for #1}
        \label{tab:blok_table_#2}
        % \begin{tabular}{p{2cm}p{3cm}p{3cm}p{2cm}p{4cm}}\toprule
        \begin{tabular}{
        p{0.08\linewidth}% Navn
        p{0.13\linewidth}% Funktion
        p{0.1\linewidth}% Portnavn
        p{0.08\linewidth}% Type
        p{0.2\linewidth}% Beskrivelse 
        p{0.2\linewidth} % Værdier
        }\toprule
            \textbf{Bloknavn} & \textbf{Funktion} & \textbf{Portnavn} & \textbf{Type} & \textbf{Beskrivelse} & \textbf{Værdier}\\}
            
            
            
\newenvironment{BlokDescription}[2]{\begin{landscape}
    \blokbeskrivelsetabularhead{#1}{#2}
}
{
    \\\bottomrule\end{tabular}
    \end{table*}
\end{landscape}
}

\newenvironment{PartBlokDescription}[2]{
    \blokbeskrivelsetabularhead{#1}{#2}
}
{
    \\\bottomrule\end{tabular}
    \end{table*}
}

